# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Server Configuration
PORT=3001
BASE_URL=http://localhost:3001

# Storage Configuration
# Options: 'gcp', 'aws', 'local' (leave empty for auto-detection)
STORAGE_PROVIDER=gcp
STORAGE_FOLDER=product-images

# Google Cloud Platform Storage Configuration
GCP_STORAGE_BUCKET=your-gcp-bucket-name
GCP_PROJECT_ID=your-gcp-project-id
# Path to service account key file (optional, uses default credentials if not provided)
GCP_KEY_FILENAME=path/to/service-account-key.json
# Or use the standard Google Cloud environment variable
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# AWS S3 Storage Configuration (alternative to GCP)
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Local Storage Configuration (fallback/development)
LOCAL_STORAGE_PATH=./uploads
BASE_URL=http://localhost:3001

# Optional: Force a specific provider (overrides auto-detection)
# STORAGE_PROVIDER=gcp